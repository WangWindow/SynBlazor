{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SlideSyn",
  "version": "0.1.0",
  "identifier": "com.slidesyn.app",
  "build": {
    "frontendDist": "../dist/wwwroot",
    "devUrl": "http://localhost:5070",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "SlideSyn",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}