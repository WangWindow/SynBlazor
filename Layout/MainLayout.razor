@using SynBlazor.Services
@inject IThemeService ThemeService
@inherits LayoutComponentBase

<FluentLayout Class="bg-theme-base min-h-screen">
    <FluentHeader Class="bg-theme-nav border-b border-theme-base">
        <div class="flex items-center justify-between w-full px-4">
            <span class="text-xl font-bold text-theme-primary">SynBlazor</span>
            <FluentSpacer />
            <ThemeToggle />
        </div>
    </FluentHeader>
    <FluentStack Class="main bg-theme-base" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content bg-theme-base">
            <ErrorBoundary>
                <ChildContent>
                    <div class="content bg-theme-base text-theme-primary">
                        @Body
                    </div>
                </ChildContent>
                <ErrorContent Context="ex">
                    <div class="blazor-error-boundary bg-theme-error-bg text-theme-error p-4 m-4 rounded border border-theme-error">@ex.Message</div>
                </ErrorContent>
            </ErrorBoundary>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter Class="bg-theme-nav border-t border-theme-base">
        <div class="flex items-center justify-between w-full px-4 py-3">
            <a href="https://www.fluentui-blazor.net" target="_blank" class="text-theme-secondary hover:text-theme-primary transition-colors">Documentation and demos</a>
            <FluentSpacer />
            <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank" class="text-theme-secondary hover:text-theme-primary transition-colors">About Blazor</a>
        </div>
    </FluentFooter>
</FluentLayout>

<FluentDialogProvider />

@code {
    protected override async Task OnInitializedAsync()
    {
        await ThemeService.InitializeAsync();
        await base.OnInitializedAsync();
    }
}
